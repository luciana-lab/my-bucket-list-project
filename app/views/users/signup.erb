<h2>Create Your Account</h2>

<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end  %>


<form method="POST" action="/signup">

    <div class="container-form">

    <label for="name">Name</label><span class="required"><small>*</small></span>:
        <input type="text" id="name" name="name" placeholder="Jane Doe" class="form-control">
    <br><br>

    <label for="email">Email</label><span class="required"><small>*</small></span>:
        <input type="text" id="email" name="email" placeholder="jane.doe@unkown.com" class="form-control">
    <br><br>

    <label for="password">Password</label><span class="required"><small>*</small></span>:
        <input type="password" id="password" name="password"  class="form-control">
    <br><br>

    <input type="checkbox"> We write fun emails! Exclusive content for subscribers.
    <br><br>

    <input type="submit" value="Create Account">
    </div>

</form>
<br>
<span><small>*</span>Required fields</small>
