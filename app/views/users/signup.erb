<h2>Create Your Account</h2>

<span class="req">
<% if flash.has?(:message) %>
    <%= flash[:message].gsub(/\n/, '<br>') %>
    <br>
<% end %>
</span>

<form method="POST" action="/signup">

    <div class="container-form">

    <label for="name">Name</label><span class="req">*</span>:
        <input type="text" id="name" name="name" placeholder="Jane Doe" class="form-control">
    <br><br>

    <label for="email">Email</label><span class="req">*</span>:
        <input type="text" id="email" name="email" placeholder="jane.doe@unkown.com" class="form-control">
    <br><br>

    <label for="password">Password</label><span class="req">*</span>:
        <input type="password" id="password" name="password"  class="form-control">
    <br><br>

    <input type="checkbox"> We write fun emails! Exclusive content for subscribers.
    <br><br>

    <input type="submit" value="Create Account">
    </div>

</form>
<br>
<span class="req">*</span>Required field